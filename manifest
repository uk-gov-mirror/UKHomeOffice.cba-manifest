##################################################
# CentOS
##################################################
CENTOS_MAJOR="7"
CENTOS_MINOR="8"
CENTOS_STAMP="2003"
CENTOS_FULL="${CENTOS_MAJOR}.${CENTOS_MINOR}.${CENTOS_STAMP}"
CENTOS_ARCH="x86_64"
CENTOS_STYLE="DVD"
CENTOS_ISO="CentOS-${CENTOS_MAJOR}-${CENTOS_ARCH}-${CENTOS_STYLE}-${CENTOS_STAMP}.iso"
CENTOS_ISO_NO_EXT="CentOS-${CENTOS_MAJOR}-${CENTOS_ARCH}-${CENTOS_STYLE}-${CENTOS_STAMP}"

CENTOS_MIRROR="https://vault.centos.org"
CENTOS_CHECKSUM="sha256sum.txt.asc"
CENTOS_GPG_KEY="RPM-GPG-KEY-CentOS-${CENTOS_MAJOR}"
CENTOS_GPG_KEY_EXPECTED_ID="F4A80EB5" # https://www.centos.org/keys/#centos-7-signing-key

CENTOS_DL_ISO="${CENTOS_MIRROR}/${CENTOS_FULL}/isos/${CENTOS_ARCH}/${CENTOS_ISO}"
CENTOS_DL_CHECKSUM="${CENTOS_MIRROR}/${CENTOS_FULL}/isos/${CENTOS_ARCH}/${CENTOS_CHECKSUM}"
CENTOS_DL_GPG_KEY="${CENTOS_MIRROR}/${CENTOS_GPG_KEY}"

##################################################
# Red Hat
##################################################
RHEL_UBI="8"

##################################################
# Ansible
##################################################
ANSIBLE_VERSION="2.9.18"
ANSIBLE_TOWER_CLI_VERSION="3.3.9"
ANSIBLE_AWX_VERSION="17.1.0"
ANSIBLE_AWX_REDIS_VERSION="6.2.1"

##################################################
# Docker
##################################################
CONTAINER_CENTOS_BASE_IMAGE="docker.io/centos:${CENTOS_FULL}"
CONTAINER_RHEL_UBI_BASE_IMAGE="registry.access.redhat.com/ubi${RHEL_UBI}"

